<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/parent_View"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        tools:context=".JN">

        <TextView
            android:id="@+id/name"
            android:text="경복궁"
            android:textSize="70dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/explain"
                android:layout_marginTop="3dp"
                android:background="@drawable/btn"
                android:textSize="18dp"
                android:text="설명보기"
                android:onClick="explain"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />

            <ImageButton
                android:id="@+id/phones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="105dp"
                android:background="@drawable/btn"
                android:onClick="Call"
                android:src="@drawable/calls" />

            <ImageButton
                android:id="@+id/sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn"
                android:onClick="Sound"
                android:src="@drawable/volumeoff" />

        </LinearLayout>

        <TextView
            android:id="@+id/intro"
            android:visibility="invisible"
            android:textSize="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:background="#0087CEEB"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#0087CEEB"
            android:padding="3dp">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="주       소 : "
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/addr"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개방시간 : " />

                <TextView
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>

                <TextView
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이용요금 : "/>

                <TextView
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:id="@+id/pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>

                <TextView
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전화번호 : "/>

                <TextView
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_down"
                android:layout_marginTop="3dp"
                android:textSize="18dp"
                android:text="이미지 더보기"
                android:onClick="ImageDown"
                android:background="@drawable/btn"
                android:layout_width="wrap_content"
                android:layout_height="35dp" />

            <Button
                android:id="@+id/btn_down2"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/btn"
                android:onClick="map"
                android:text="지도 보기"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btn_down3"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/btn"
                android:onClick="URL_connect"
                android:text="홈페이지 연결"
                android:textSize="18dp" />

        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/child_View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_margin="3dp" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_margin="3dp" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_margin="3dp" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_margin="3dp" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>